<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuestCraft - AI-Powered Minecraft Server | Play-to-Earn NFTs</title>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        :root {
            --grass-green: #7CB342;
            --dark-green: #689F38;
            --stone-gray: #9E9E9E;
            --dark-gray: #757575;
            --wood-brown: #8D6E63;
            --dark-brown: #795548;
            --gold: #FFD700;
            --diamond: #00BCD4;
            --emerald: #4CAF50;
            --redstone: #F44336;
            --coal: #424242;
            --sky-blue: #87CEEB;
        }
        body {
            font-family: 'Press Start 2P', monospace;
            background: linear-gradient(180deg, var(--sky-blue) 0%, #98D8E8 50%, var(--sky-blue) 100%);
            color: #2F4F2F;
            overflow-x: hidden;
            image-rendering: pixelated;
            image-rendering: -moz-crisp-edges;
            image-rendering: crisp-edges;
            line-height: 1.6;
        }
        /* Animated background clouds */
        .clouds {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }
        .cloud {
            position: absolute;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50px;
            opacity: 0.7;
            animation: cloudFloat 20s linear infinite;
        }
        .cloud::before,
        .cloud::after {
            content: '';
            position: absolute;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50px;
        }
        .cloud1 {
            width: 100px;
            height: 40px;
            top: 20%;
            left: -100px;
            animation-duration: 25s;
        }
        .cloud1::before {
            width: 50px;
            height: 50px;
            top: -25px;
            left: 10px;
        }
        .cloud1::after {
            width: 60px;
            height: 40px;
            top: -15px;
            right: 10px;
        }
        .cloud2 {
            width: 80px;
            height: 30px;
            top: 10%;
            left: -80px;
            animation-duration: 30s;
            animation-delay: -10s;
        }
        .cloud2::before {
            width: 40px;
            height: 40px;
            top: -20px;
            left: 15px;
        }
        .cloud2::after {
            width: 50px;
            height: 30px;
            top: -10px;
            right: 15px;
        }
        .cloud3 {
            width: 120px;
            height: 50px;
            top: 30%;
            left: -120px;
            animation-duration: 35s;
            animation-delay: -20s;
        }
        .cloud3::before {
            width: 60px;
            height: 60px;
            top: -30px;
            left: 20px;
        }
        .cloud3::after {
            width: 70px;
            height: 50px;
            top: -20px;
            right: 20px;
        }
        @keyframes cloudFloat {
            0% { transform: translateX(0); }
            100% { transform: translateX(calc(100vw + 200px)); }
        }
        /* Minecraft-style backgrounds */
        .grass-bg {
            background: linear-gradient(to bottom, 
                var(--sky-blue) 0%, 
                var(--sky-blue) 70%, 
                var(--grass-green) 70%, 
                var(--grass-green) 85%, 
                var(--dark-green) 85%, 
                var(--dark-green) 95%, 
                var(--wood-brown) 95%);
            position: relative;
        }
        .grass-bg::before {
            content: '';
            position: absolute;
            top: 70%;
            left: 0;
            right: 0;
            height: 30%;
            background-image: 
                repeating-linear-gradient(90deg, 
                    var(--grass-green) 0px, var(--grass-green) 16px, 
                    var(--dark-green) 16px, var(--dark-green) 32px),
                repeating-linear-gradient(0deg, 
                    transparent 0px, transparent 8px, 
                    rgba(0,0,0,0.1) 8px, rgba(0,0,0,0.1) 16px);
            z-index: 2;
        }
        .stone-bg {
            background: var(--stone-gray);
            background-image: 
                repeating-linear-gradient(45deg, 
                    var(--stone-gray) 0px, var(--stone-gray) 16px, 
                    var(--dark-gray) 16px, var(--dark-gray) 32px),
                repeating-linear-gradient(-45deg, 
                    transparent 0px, transparent 8px, 
                    rgba(0,0,0,0.15) 8px, rgba(0,0,0,0.15) 16px);
        }
        .wood-bg {
            background: var(--wood-brown);
            background-image: 
                repeating-linear-gradient(90deg, 
                    var(--wood-brown) 0px, var(--wood-brown) 32px, 
                    var(--dark-brown) 32px, var(--dark-brown) 64px),
                repeating-linear-gradient(0deg, 
                    transparent 0px, transparent 16px, 
                    rgba(0,0,0,0.1) 16px, rgba(0,0,0,0.1) 32px);
        }
        /* Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            position: relative;
            z-index: 3;
        }
        /* Header */
        header {
            background: var(--wood-brown);
            background-image: 
                repeating-linear-gradient(90deg, 
                    var(--wood-brown) 0px, var(--wood-brown) 16px, 
                    var(--dark-brown) 16px, var(--dark-brown) 32px),
                repeating-linear-gradient(0deg, 
                    transparent 0px, transparent 8px, 
                    rgba(0,0,0,0.2) 8px, rgba(0,0,0,0.2) 16px);
            border-bottom: 4px solid #5D4037;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 4px 0 #3E2723, 0 8px 16px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
        }
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
        }
        .logo {
            font-size: 18px;
            color: #FFEB3B;
            text-decoration: none;
            text-shadow: 2px 2px 0 #F57F17, 4px 4px 8px rgba(0,0,0,0.5);
            letter-spacing: 2px;
            animation: logoGlow 3s ease-in-out infinite alternate;
        }
        @keyframes logoGlow {
            0% { text-shadow: 2px 2px 0 #F57F17, 4px 4px 8px rgba(0,0,0,0.5); }
            100% { text-shadow: 2px 2px 0 #F57F17, 4px 4px 8px rgba(0,0,0,0.5), 0 0 15px #FFEB3B; }
        }
        .nav-links {
            display: flex;
            list-style: none;
            gap: 10px;
        }
        .nav-links a {
            color: #FFFFFF;
            text-decoration: none;
            font-size: 10px;
            padding: 10px 5px;
            background: var(--emerald);
            border: 2px solid #2E7D32;
            border-bottom: 4px solid #1B5E20;
            transition: all 0.15s ease;
            position: relative;
            overflow: hidden;
        }
        .nav-links a::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }
        .nav-links a:hover::before {
            left: 100%;
        }
        .nav-links a:hover {
            background: #66BB6A;
            transform: translateY(2px);
            border-bottom: 2px solid #1B5E20;
        }
        .join-btn {
            background: linear-gradient(45deg, #FF9800, #FF5722);
            color: #FFFFFF;
            padding: 12px 20px;
            border: 2px solid #E65100;
            border-bottom: 4px solid #BF360C;
            text-decoration: none;
            font-size: 10px;
            transition: all 0.15s ease;
            animation: joinPulse 2s ease-in-out infinite;
        }
        @keyframes joinPulse {
            0%, 100% { box-shadow: 0 0 0 0 rgba(255, 152, 0, 0.7); }
            50% { box-shadow: 0 0 0 8px rgba(255, 152, 0, 0); }
        }
        .join-btn:hover {
            background: linear-gradient(45deg, #FFB74D, #FF7043);
            transform: translateY(2px);
            border-bottom: 2px solid #BF360C;
        }
        /* Mobile menu */
        .mobile-menu {
            display: none;
            background: #FF9800;
            color: #FFFFFF;
            padding: 10px 14px;
            border: 2px solid #E65100;
            border-bottom: 4px solid #BF360C;
            font-size: 10px;
            cursor: pointer;
            transition: all 0.15s ease;
        }
        .mobile-nav {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: var(--wood-brown);
            border-bottom: 4px solid #5D4037;
            padding: 16px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.3);
        }
        .mobile-nav.active {
            display: block;
            animation: slideDown 0.3s ease;
        }
        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .mobile-nav a {
            display: block;
            color: #FFFFFF;
            text-decoration: none;
            font-size: 10px;
            padding: 12px;
            margin: 8px 0;
            background: var(--emerald);
            border: 2px solid #2E7D32;
            border-bottom: 4px solid #1B5E20;
            text-align: center;
            transition: all 0.15s ease;
        }
        /* Hero Section */
        .hero {
            min-height: 100vh;
            padding-top: 80px;
            position: relative;
            overflow: hidden;
        }
        .hero-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            align-items: center;
            min-height: calc(100vh - 80px);
            position: relative;
            z-index: 3;
        }
        .hero-text h1 {
            font-size: 28px;
            line-height: 1.3;
            margin-bottom: 24px;
            color: #2E7D32;
            text-shadow: 2px 2px 0 #FFFFFF, 4px 4px 8px rgba(0,0,0,0.3);
            animation: titleFloat 4s ease-in-out infinite;
        }
        @keyframes titleFloat {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-5px); }
        }
        .hero-text .highlight {
            color: #FF9800;
            text-shadow: 2px 2px 0 #E65100, 4px 4px 8px rgba(0,0,0,0.3);
            animation: highlightGlow 2s ease-in-out infinite alternate;
        }
        @keyframes highlightGlow {
            0% { filter: brightness(1); }
            100% { filter: brightness(1.2) drop-shadow(0 0 8px #FF9800); }
        }
        .hero-text p {
            font-size: 11px;
            line-height: 1.7;
            margin-bottom: 32px;
            color: #424242;
            background: rgba(255,255,255,0.95);
            padding: 16px;
            border: 2px solid #E0E0E0;
            border-bottom: 4px solid #BDBDBD;
        }
        .hero-buttons {
            display: flex;
            gap: 16px;
            flex-wrap: wrap;
        }
        .btn-primary {
            background: linear-gradient(45deg, var(--emerald), #66BB6A);
            color: #FFFFFF;
            padding: 16px 24px;
            border: 2px solid #2E7D32;
            border-bottom: 4px solid #1B5E20;
            text-decoration: none;
            font-size: 12px;
            transition: all 0.15s ease;
            cursor: pointer;
            display: inline-block;
            position: relative;
            overflow: hidden;
        }
        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }
        .btn-primary:hover::before {
            left: 100%;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #66BB6A, #81C784);
            transform: translateY(2px);
            border-bottom: 2px solid #1B5E20;
        }
        .btn-secondary {
            background: var(--stone-gray);
            color: #FFFFFF;
            padding: 16px 24px;
            border: 2px solid #616161;
            border-bottom: 4px solid #424242;
            text-decoration: none;
            font-size: 12px;
            transition: all 0.15s ease;
            display: inline-block;
        }
        .btn-secondary:hover {
            background: #BDBDBD;
            transform: translateY(2px);
            border-bottom: 2px solid #424242;
        }
        @keyframes redstoneGlow {
            0% { box-shadow: 
                inset -3px -3px 0 rgba(0,0,0,0.3),
                inset 3px 3px 0 rgba(255,255,255,0.3),
                3px 3px 6px rgba(0,0,0,0.3),
                0 0 12px rgba(244, 67, 54, 0.6); }
            100% { box-shadow: 
                inset -3px -3px 0 rgba(0,0,0,0.3),
                inset 3px 3px 0 rgba(255,255,255,0.3),
                3px 3px 6px rgba(0,0,0,0.3),
                0 0 20px rgba(244, 67, 54, 0.9); }
        }
        .block-1 { top: 60px; left: 10%; animation-delay: 0s; }
        .block-2 { top: 180px; right: 20%; animation-delay: 1s; }
        .block-3 { bottom: 120px; left: 25%; animation-delay: 2s; }
        .block-4 { top: 100px; right: 10%; animation-delay: 3s; }
        .block-5 { bottom: 60px; right: 35%; animation-delay: 4s; }

        @keyframes blockFloat {
            0%, 100% { transform: translateY(0px) rotateX(0deg) rotateY(0deg); }
            25% { transform: translateY(-10px) rotateX(3deg) rotateY(3deg); }
            50% { transform: translateY(-20px) rotateX(0deg) rotateY(6deg); }
            75% { transform: translateY(-10px) rotateX(-3deg) rotateY(3deg); }
        }
        .block:hover {
            transform: scale(1.1) rotateX(10deg) rotateY(10deg) !important;
            z-index: 10;
            animation-play-state: paused;
        }
        /* Features Section */
        .features {
            padding: 80px 0;
        }
        .section-title {
            text-align: center;
            font-size: 20px;
            margin-bottom: 48px;
            color: #FFEB3B;
            text-shadow: 2px 2px 0 #F57F17, 4px 4px 8px rgba(0,0,0,0.5);
        }
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 32px;
        }
        .feature-card {
            background: #FFFFFF;
            border: 3px solid #E0E0E0;
            border-bottom: 6px solid #BDBDBD;
            padding: 24px;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.1), transparent);
            transition: left 0.6s ease;
        }
        .feature-card:hover::before {
            left: 100%;
        }
        .feature-card:hover {
            transform: translateY(-6px);
            border-bottom: 3px solid #BDBDBD;
            box-shadow: 0 12px 24px rgba(0,0,0,0.2);
        }
        .feature-icon {
            font-size: 32px;
            margin-bottom: 16px;
            display: block;
            animation: iconBounce 3s ease-in-out infinite;
        }
        @keyframes iconBounce {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-3px); }
        }
        .feature-card h3 {
            font-size: 12px;
            margin-bottom: 16px;
            color: #2E7D32;
        }
        .feature-card p {
            font-size: 8px;
            line-height: 1.6;
            color: #424242;
        }
        /* How it Works */
        .how-it-works {
            padding: 80px 0;
        }
        .steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 32px;
            margin-top: 48px;
        }
        .step {
            text-align: center;
            background: #FFFFFF;
            border: 3px solid #E0E0E0;
            border-bottom: 6px solid #BDBDBD;
            padding: 24px;
            position: relative;
            transition: all 0.3s ease;
        }
        .step:hover {
            transform: translateY(-4px);
            border-bottom: 3px solid #BDBDBD;
        }
        .step-number {
            width: 40px;
            height: 40px;
            background: #FF9800;
            border: 3px solid #E65100;
            color: #FFFFFF;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            margin: 0 auto 16px;
        }
        .step h3 {
            font-size: 12px;
            margin-bottom: 16px;
            color: #2E7D32;
        }
        .step p {
            font-size: 8px;
            line-height: 1.6;
            color: #424242;
        }
        /* Wallet Section */
        .wallet-section {
            background: rgba(255, 255, 255, 0.95);
            border: 3px solid #E0E0E0;
            border-bottom: 6px solid #BDBDBD;
            padding: 32px;
            margin-top: 32px;
            position: relative;
            overflow: hidden;
            border-radius: 0;
        }
        .wallet-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--emerald), var(--gold), var(--diamond), var(--redstone));
            animation: walletGlow 3s ease-in-out infinite;
        }
        @keyframes walletGlow {
            0%, 100% { opacity: 0.8; }
            50% { opacity: 1; }
        }
        .wallet-section h2 {
            font-size: 16px;
            color: #2E7D32;
            text-align: center;
            margin-bottom: 24px;
            text-shadow: 1px 1px 0 #FFFFFF;
        }
        .wallet-status {
            text-align: center;
            margin-bottom: 24px;
        }
        .connect-wallet-btn {
            background: linear-gradient(45deg, var(--diamond), #26C6DA);
            color: #FFFFFF;
            padding: 16px 32px;
            border: 2px solid #0097A7;
            border-bottom: 4px solid #006064;
            font-size: 12px;
            font-family: 'Press Start 2P', monospace;
            cursor: pointer;
            transition: all 0.15s ease;
            position: relative;
            overflow: hidden;
            animation: walletPulse 3s ease-in-out infinite;
        }
        @keyframes walletPulse {
            0%, 100% { box-shadow: 0 0 0 0 rgba(0, 188, 212, 0.7); }
            50% { box-shadow: 0 0 0 8px rgba(0, 188, 212, 0); }
        }
        .connect-wallet-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }
        .connect-wallet-btn:hover::before {
            left: 100%;
        }
        .connect-wallet-btn:hover {
            background: linear-gradient(45deg, #26C6DA, #4DD0E1);
            transform: translateY(2px);
            border-bottom: 2px solid #006064;
        }
        .connect-wallet-btn:disabled {
            background: var(--stone-gray);
            border-color: #616161;
            cursor: not-allowed;
            animation: none;
        }
        .wallet-address {
            background: var(--coal);
            color: #00E676;
            padding: 16px;
            border: 2px solid #616161;
            font-size: 10px;
            margin: 16px 0;
            letter-spacing: 1px;
            text-align: center;
            font-family: 'Press Start 2P', monospace;
            display: none;
            animation: addressReveal 0.5s ease;
        }
        @keyframes addressReveal {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .wallet-address.show {
            display: block;
        }
        /* NFT Section */
        .nfts-section {
            margin-top: 32px;
            display: none;
        }
        .nfts-section.show {
            display: block;
            animation: nftsReveal 0.5s ease;
        }
        @keyframes nftsReveal {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .nfts-title {
            font-size: 14px;
            color: #2E7D32;
            text-align: center;
            margin-bottom: 24px;
            text-shadow: 1px 1px 0 #FFFFFF;
        }
        .nfts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }
        .nft-card {
            background: #FFFFFF;
            border: 3px solid #E0E0E0;
            border-bottom: 6px solid #BDBDBD;
            padding: 16px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        .nft-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.1), transparent);
            transition: left 0.6s ease;
        }
        .nft-card:hover::before {
            left: 100%;
        }
        .nft-card:hover {
            transform: translateY(-6px);
            border-bottom: 3px solid #BDBDBD;
            box-shadow: 0 12px 24px rgba(0,0,0,0.2);
        }
        .nft-card img {
            width: 100%;
            height: 120px;
            object-fit: cover;
            border: 2px solid #E0E0E0;
            image-rendering: pixelated;
            margin-bottom: 12px;
        }
        .nft-card p {
            font-size: 8px;
            color: #424242;
            margin-bottom: 8px;
        }
        .nft-card .nft-name {
            font-size: 10px;
            color: #2E7D32;
            font-weight: bold;
        }
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid var(--emerald);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 8px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .no-nfts {
            text-align: center;
            padding: 40px 20px;
            color: #666;
            font-size: 10px;
            background: rgba(255,255,255,0.5);
            border: 2px dashed #ccc;
            margin: 20px 0;
        }
        .error-message {
            background: #ffebee;
            color: #c62828;
            padding: 16px;
            border: 2px solid #ef5350;
            border-bottom: 4px solid #c62828;
            font-size: 8px;
            text-align: center;
            margin: 16px 0;
            display: none;
        }
        .error-message.show {
            display: block;
            animation: errorShake 0.5s ease;
        }
        @keyframes errorShake {
            0%, 20%, 40%, 60%, 80%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        }
        /* Footer */
        footer {
